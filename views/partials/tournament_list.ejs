<div class="card mb-4">
  <div class="card-body">
    <div class="section-header d-flex justify-content-between align-items-center">
      <h5 class="card-title m-0">Tournaments</h5>
    </div>
    <% if (!tournaments.length) { %>
      <div class="text-muted">No tournaments found for this selection.</div>
    <% } else { %>
      <ul class="list-group clean-list" id="tournament-list">
        <% tournaments.forEach((t, idx) => { %>
          <li class="list-group-item tournament-item<%= t.included === false && filters && (filters.include.length || filters.exclude.length) ? ' filtered d-none' : '' %>" data-included="<%= t.included %>" data-idx="<%= idx %>">
            <div class="ti-row d-flex align-items-center">
              <div class="ti-main flex-grow-1">
                <div class="ti-name"><%= t.name %></div>
                <div class="ti-meta"><span><%= t.start_date %></span><span class="sep">â€“</span><span><%= t.end_date %></span></div>
              </div>
              <div class="ti-aside d-flex align-items-center gap-2">
                <span class="badge bg-info text-dark">Prize: <%= t.prize_pool %></span>
                <span class="badge bg-secondary"><%= t.location %></span>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</div>

