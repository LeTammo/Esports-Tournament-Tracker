<li class="list-group-item tournament-item <%= itemExtraClass || '' %>
    <%= t.included === false && filters && (filters.include.length || filters.exclude.length) ? ' filtered d-none' : '' %>"
    data-included="<%= t.included %>" data-idx="<%= prefix %>-<%= idx %>">
    <div class="ti-row d-flex align-items-center">
        <div class="ti-main flex-grow-1">
            <div class="ti-name">
                <% if (!selectedGame && t.game_name) { %>
                    <span class="badge game-badge" style="text-transform: capitalize"><%= t.game_name %></span>
                <% } %>
                <a class="brand-accent" href="<%= t.url %>" target="_blank" rel="noopener noreferrer"><%= t.name %></a>
            </div>
            <div class="ti-meta">
                <% if (showEta && t.eta) { %>
                    <span class="badge bg-info text-dark"><%= t.eta %></span>
                <% } %>
                <span><%= formatDateRange(t._sd || t.start_date, t._ed || t.end_date) %></span>
            </div>
        </div>
        <div class="ti-aside d-flex flex-column align-items-end gap-2">
            <span class="badge eta-badge"><%= t.location %></span>
            <span class="badge bg-secondary">Prize: <%= t.prize_pool %></span>
        </div>
    </div>
</li>
