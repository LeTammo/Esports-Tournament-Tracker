<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tournament Tracker</title>
    <meta name="color-scheme" content="dark">
    <meta name="theme-color" content="#0b0f14">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', { games, selectedGame }) %>
    <%- include('partials/tiers_tabs', { tiers, selectedGame, selectedTier }) %>
    <div class="container mt-4">
        <% if (selectedTier) { %>
            <%- include('partials/filters', { filters, selectedTier }) %>
        <% } %>
        <div class="row">
            <div class="col">
                <% if (!selectedGame && isAdmin) { %>
                    <%- include('partials/submit_form', { savedPages }) %>
                <% } %>
                <%- include('partials/tournament_list', { tournaments }) %>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/main.js"></script>
</body>
</html>
